<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/dialog_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/dialog_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/dialog_btn_close"
        android:layout_margin="20dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/dialog_close"
        app:layout_constraintEnd_toEndOf="@id/dialog_background"
        app:layout_constraintTop_toTopOf="@id/dialog_background"
        />
    <ImageView
        android:id="@+id/dialog_success"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="@id/dialog_background"
        app:layout_constraintStart_toStartOf="@id/dialog_background"
        app:layout_constraintEnd_toEndOf="@id/dialog_background"
        android:src="@drawable/dialog_success"/>

    <TextView
        android:id="@+id/dialog_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_end_title"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="36sp"
        app:layout_constraintTop_toBottomOf="@id/dialog_success"
        app:layout_constraintStart_toStartOf="@id/dialog_background"
        app:layout_constraintEnd_toEndOf="@id/dialog_background"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/dialog_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:text="@string/dialog_end_sub_title"
        android:textSize="26sp"
        app:layout_constraintTop_toBottomOf="@id/dialog_text1"
        app:layout_constraintStart_toStartOf="@id/dialog_background"
        app:layout_constraintEnd_toEndOf="@id/dialog_background"/>
    <Button
        android:id="@+id/dialog_btn_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:text="@string/dialog_end_exit"
        android:textSize="38sp"
        android:padding="15dp"
        android:textAllCaps="false"
        android:background="@drawable/style_dialog_btn_black"
        app:layout_constraintVertical_bias="0.65"
        app:layout_constraintTop_toBottomOf="@id/dialog_text2"
        app:layout_constraintBottom_toBottomOf="@id/dialog_background"
        app:layout_constraintStart_toStartOf="@id/dialog_background"/>
    <Button
        android:id="@+id/dialog_btn_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:textSize="38sp"
        android:padding="15dp"
        android:textAllCaps="false"
        android:text="@string/dialog_end_repeat"
        android:background="@drawable/style_dialog_btn_stroke"
        app:layout_constraintVertical_bias="0.65"
        app:layout_constraintTop_toBottomOf="@id/dialog_text2"
        app:layout_constraintBottom_toBottomOf="@id/dialog_background"
        app:layout_constraintEnd_toEndOf="@id/dialog_background"/>

</androidx.constraintlayout.widget.ConstraintLayout>