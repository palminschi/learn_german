<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/background" />
    <ImageView
        android:visibility="gone"
        android:elevation="10dp"
        android:id="@+id/full_screen_false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/full_screen_false" />
    <LinearLayout
        android:elevation="4dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/container_ads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="invisible">

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/bannerAd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            ads:adSize="BANNER"
            ads:adUnitId="@string/AD_UNIT_BANNER_ID" />

    </LinearLayout>

    <LinearLayout
        android:elevation="3dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="18"
            android:scaleType="fitXY"
            android:src="@drawable/img_cloud"
            android:adjustViewBounds="true"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="59"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="23"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/img_stone"/>
    </LinearLayout>
    <LinearLayout
        android:elevation="4dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">
        <LinearLayout
            android:id="@+id/line_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="7"
            android:orientation="horizontal">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    android:onClick="onClickBtnBack"
                    android:id="@+id/btn_back"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:adjustViewBounds="true"
                    android:background="@drawable/style_btn_back_black"
                    app:backgroundTint="@null"
                    app:layout_constraintDimensionRatio="H,16:11"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <ImageView
                    android:id="@+id/life_01"
                    android:src="@drawable/game_heart"
                    android:layout_marginVertical="11dp"
                    android:layout_marginStart="30dp"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    app:layout_constraintDimensionRatio="H,4:4"
                    app:layout_constraintStart_toEndOf="@id/btn_back"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <ImageView
                    android:id="@+id/life_02"
                    android:src="@drawable/game_heart"
                    android:layout_marginVertical="11dp"
                    android:layout_marginStart="3dp"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    app:layout_constraintDimensionRatio="H,4:4"
                    app:layout_constraintStart_toEndOf="@id/life_01"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <ImageView
                    android:id="@+id/life_03"
                    android:src="@drawable/game_heart"
                    android:layout_marginVertical="11dp"
                    android:layout_marginStart="3dp"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    app:layout_constraintDimensionRatio="H,4:4"
                    app:layout_constraintStart_toEndOf="@id/life_02"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <ImageView
                    android:id="@+id/img_bestscore"
                    android:src="@drawable/game_bestscore"
                    android:layout_marginVertical="11dp"
                    android:layout_marginEnd="2dp"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    app:layout_constraintDimensionRatio="H,4:4"
                    app:layout_constraintEnd_toStartOf="@id/equal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <TextView
                    android:id="@+id/equal"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_marginEnd="5dp"
                    android:text="="
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toStartOf="@id/best_score"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <TextView
                    android:id="@+id/best_score"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_marginEnd="20dp"
                    android:text="0"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toStartOf="@id/sound_toggle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <ToggleButton
                    android:id="@+id/sound_toggle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:background="@drawable/style_sound_toggle_black"
                    android:textOff=""
                    android:textOn=""
                    app:layout_constraintDimensionRatio="H,4:4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/line_words"
            android:elevation="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:weightSum="100">
            <Button
                android:onClick="onPressedWordLeft"
                android:background="@drawable/style_game01_color01"
                android:id="@+id/word_left"
                android:text="@string/word_translate_1"
                android:textAllCaps="false"
                android:textSize="17sp"
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:layout_height="fill_parent"
                android:layout_weight="50"/>
            <Button
                android:onClick="onPressedWordRight"
                android:background="@drawable/style_game01_color02"
                android:id="@+id/word_right"
                android:text="@string/word_translate_1"
                android:textAllCaps="false"
                android:textSize="17sp"
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:layout_height="fill_parent"
                android:layout_weight="50"/>
        </LinearLayout>
        <TextView
            android:elevation="1dp"
            android:id="@+id/word_title"
            android:textSize="35sp"
            android:textColor="@color/white_violet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/word_title_example"
            app:layout_constraintVertical_bias="0.7"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>
